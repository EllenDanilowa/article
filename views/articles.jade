doctype html
html(lang='en')
  head
    title New article
    link(rel='stylesheet', href='../styles/base.css')
    link(rel='stylesheet', href='../styles/style.css')
  body
    header.site-header
      h1.site-header__logo News
    .site-content
      h2.page-title Last article
      ul.article-list
        for article in articles
          li.article-list__item
            h3.article-list__item__title #{article.title}
            p.article-list__item__description #{article.description}
            a.article-list__item__link(href='#{article.link}') Read more...
            img.article-list__item__image(src='../uploads/#{article.imageHash}', alt='alt')
            span.article-list__item__author #{article.author}
            span.article-list__item__date #{article.creation_date}